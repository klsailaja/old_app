<resources>
    <!-- Login Screen -->
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="viewParent.headerText">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Main Screen Navigation View Style -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Games Screen -->
    <style name="quiz_left_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/normal_label_left_padding</item>
        <item name="android:textSize">@dimen/normal_label_left_textsize</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:focusable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:importantForAccessibility">yes</item>
    </style>
    <style name="quiz_right_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/normal_label_right_padding</item>
        <item name="android:textSize">@dimen/normal_label_right_textsize</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:focusable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:importantForAccessibility">yes</item>
    </style>
    <style name="iconstyle">
        <item name="android:layout_width">@dimen/game_icon_size</item>
        <item name="android:layout_height">@dimen/game_icon_size</item>
        <item name="android:layout_marginStart">@dimen/game_icon_margin_start</item>
        <item name="android:tint">#000000</item>
        <item name="android:colorForeground">@drawable/button_background_blue</item>
        <item name="android:importantForAccessibility">no</item>
    </style>
    <style name="titleBarStyle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">"Arial"</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:importantForAccessibility">no</item>
    </style>
    <style name="toolbarIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:importantForAccessibility">no</item>
    </style>
    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="StatusBarMsg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:background">@color/whiteTextColor</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/statusBarMargin</item>
        <item name="android:layout_marginBottom">@dimen/statusBarMarginBottom</item>
    </style>
    <!-- edittext style -->
    <style name="normalTextBox" parent="parent">
        <item name="android:textSize">@dimen/textBoxSize</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>
    <!-- Button style -->
    <style name="normalButton" parent="viewParent">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:textSize">@dimen/normal_label_left_textsize</item>
    </style>
    <style name="listTypeButtons" parent="viewParent">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:textSize">@dimen/list_type_textsize</item>
    </style>
    <style name="tableHeaderTextBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tableHeaderTextBoxTextSize</item>
        <item name="android:fontFamily">Arial</item>
    </style>
    <style name="wdCancelButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/wdCancelButTxt</item>
        <item name="android:fontFamily">Arial</item>
    </style>
    <style name="viewIntroText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/introduction_text_top_gap</item>
        <item name="android:layout_marginStart">@dimen/introduction_text_start_gap</item>
        <item name="android:textSize">@dimen/introduction_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="viewIntroTextSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/introduction_text_top_gap_small</item>
        <item name="android:layout_marginStart">@dimen/introduction_text_start_gap</item>
        <item name="android:textSize">@dimen/introduction_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="filterLayerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/filter_layer_text_top_gap</item>
        <item name="android:layout_marginStart">@dimen/filter_layer_text_start_gap</item>
        <item name="android:textSize">@dimen/filter_layer_text_size</item>
        <item name="android:fontFamily">Arial</item>
    </style>
    <style name="viewTable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/table_top_gap</item>
    </style>
    <style name="next_prev_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="next_prev_but">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">Arial</item>
        <item name="android:gravity">center</item>
    </style>
</resources>