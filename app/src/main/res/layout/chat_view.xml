<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.40"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_height="wrap_content">
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <Button
            android:id="@+id/chat_invite_but"
            android:layout_width="wrap_content"
            android:text="@string/chat_invite_msg"
            android:layout_gravity="center"
            android:enabled="false"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <Button
            android:id="@+id/chat_repy_but"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/chat_reply_msg"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:lines="2"
            android:hint="Your Chat Message Appears Here"
            android:layout_height="wrap_content"
            android:id="@+id/chatSendMsgTxt"/>
        <Button
            android:id="@+id/chatSendBut"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="@string/chat_send_but"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
    </LinearLayout>
    <View
        android:padding="2dp"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#c0c0c0"/>
    <ScrollView
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_weight="0.60"
        android:layout_width="0dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="2dp"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>
