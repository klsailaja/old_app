<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/intro"
            style="@style/viewIntroText"
            android:text="@string/kycIntro" />
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_top_medium"
                android:textSize="@dimen/introduction_text_size"
                android:text="@string/kycStatusLabel"/>
            <TextView
                android:id="@+id/statusId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_top_medium"
                android:textSize="@dimen/introduction_text_size"
                android:text=""/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_top_medium"
            android:textSize="@dimen/introduction_text_size"
            android:text="@string/aadharPages"/>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginTop="@dimen/margin_top_large"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp">
                    <ImageView
                        android:id="@+id/frontPage"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/test_user_name"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/document" />
                    <Button
                        android:id="@+id/addFront"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_top_small"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/frontPage"
                        android:text="@string/screenshot_add" />
                    <Button
                        android:id="@+id/viewFront"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_top_small"
                        android:layout_toEndOf="@+id/frontPage"
                        android:text="@string/viewKyc" />
                    <Button
                        android:id="@+id/removeFront"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_top_small"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/frontPage"
                        android:text="@string/screenshot_remove" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/margin_top_large"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp">
                    <ImageView
                        android:id="@+id/backPage"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/test_user_name"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/document" />
                    <Button
                        android:id="@+id/addBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_top_small"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/backPage"
                        android:text="@string/screenshot_add" />
                    <Button
                        android:id="@+id/viewBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_top_small"
                        android:layout_toEndOf="@+id/backPage"
                        android:text="@string/viewKyc" />
                    <Button
                        android:id="@+id/removeBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_top_small"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/backPage"
                        android:text="@string/screenshot_remove" />
                </RelativeLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_top_medium"
            android:textSize="@dimen/introduction_text_size"
            android:text="@string/panPages"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/margin_top_large"
            android:layout_width="wrap_content"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/panPage"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/test_user_name"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/document" />
            <Button
                android:id="@+id/addPan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_top_small"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/panPage"
                android:text="@string/screenshot_add" />
            <Button
                android:id="@+id/viewPan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_top_small"
                android:layout_toEndOf="@+id/panPage"
                android:text="@string/viewKyc" />
            <Button
                android:id="@+id/removePan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_top_small"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/panPage"
                android:text="@string/screenshot_remove" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>
        <Button
            style="@style/normalButton"
            android:layout_marginTop="@dimen/margin_top_small"
            android:id="@+id/kycCreateBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/submitKYC"/>
    </LinearLayout>
</ScrollView>