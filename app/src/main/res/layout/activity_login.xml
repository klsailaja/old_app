<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ab.telugumoviequiz.main.LoginActivity"
    android:background="@color/login_bk_color"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:layout_gravity="center">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/login_screen_top_to_intro_text"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    style="@style/viewParent.headerText.NoMode"
                    android:text="@string/login_screen_already_have_acc"/>
            </RelativeLayout>
            <EditText
                android:id="@+id/editTextEmail"
                android:layout_marginTop="@dimen/loginViewsMargin"
                style="@style/modifiedEditText"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/test_user_name"
                android:hint="@string/login_email_hint"
                android:autofillHints="" />
            <EditText
                android:id="@+id/editTextPassword"
                android:layout_marginTop="@dimen/loginViewsMargin"
                style="@style/modifiedEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_password_hint"
                android:text="@string/test_passwd"
                android:maxLines="1"
                android:inputType="textPassword"
                android:autofillHints="" />
            <TextView
                style="@style/viewParent"
                android:id="@+id/forgotPasswordBut"
                android:text="@string/login_screen_forgot_password"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/newsMoreTextSize"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"/>
            <Button
                style="@style/button"
                android:layout_marginTop="5dp"
                android:id="@+id/loginBut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/primaryTextColor"
                android:gravity="center"
                android:text="@string/login_screen_login_text" />
            <ProgressBar
                android:indeterminate="false"
                android:indeterminateOnly="true"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/login_screen_progressbar"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <TextView
                android:id="@+id/viewNewUserBut"
                style="@style/parent"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/themeColor"
                android:textSize="17sp"
                android:text="@string/login_screen_new_user_register_now"
                android:layout_marginTop="@dimen/loginViewsMargin"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>