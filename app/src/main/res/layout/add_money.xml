<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/view_gap_from_top"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/add_money_intro"
            style="@style/viewIntroText"
            android:text="@string/add_money_intro" />
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/gap_in_components_less"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/moneyButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_margin="@dimen/gap_in_components_less"
            android:orientation="horizontal"
            style="@style/parent">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/add_money_others_text_box_hint"
                android:textColorHint="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otherMoneyTextBox"
                    android:inputType="numberSigned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            style="@style/parent">
            <CheckBox
                android:id="@+id/add_money_extra_fees"
                android:text="@string/add_money_extra_fees_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textBoxSize"
                android:textColor="@color/impInfo"
                android:checked="false"/>
        </LinearLayout>
        <Button
            style="@style/normalButton"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/addBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:enabled="false"
            android:background="@drawable/dialog_close"
            android:text="@string/add_money_button_text" />
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/gap_in_components_medium"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/moneyListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>