<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:stretchColumns="*"
            android:id="@+id/ques_button_panel"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">
            <TableRow android:padding="2dp"
                tools:ignore="UselessParent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.0"
                    android:layout_column="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/quiz_right_label"
                        android:layout_weight="0.0"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text="@string/starts_text" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/quiz_right_label"
                        android:layout_weight="0.0"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:id="@+id/game_starts_label" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.0"
                    android:layout_column="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.0"
                        style="@style/quiz_right_label"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text="@string/starts_user_ct" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.0"
                        android:layout_gravity="start"
                        android:gravity="start"
                        style="@style/quiz_right_label"
                        android:id="@+id/starts_user_ct_val" />
                </LinearLayout>
                <Button
                    style="@style/button"
                    android:layout_column="3"
                    android:id="@+id/game_starts_leave_but"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.0"
                    android:text="@string/leave_but_text" />
                <Button
                    style="@style/button"
                    android:layout_column="4"
                    android:id="@+id/game_starts_network_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.0"
                    android:text="@string/speed_but_text" />
            </TableRow>
        </TableLayout>
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:id="@+id/timerLayout">
            <TextView
                android:text="@string/timerInitialVal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:id="@+id/timerView" />
            <ProgressBar
                android:indeterminate="true"
                android:layout_centerInParent="true"
                android:indeterminateOnly="true"
                android:max="20"
                android:progress="0"
                android:id="@+id/timerProgress"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </RelativeLayout>
        <TextView
            android:textSize="25sp"
            android:text="@string/ques_initial_text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/quesBG"
            android:textColor="@color/whiteTextColor"
            android:layout_marginTop="5dp"
            android:id="@+id/questionView" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp">
            <TextView
                android:gravity="center"
                android:textSize="25sp"
                android:clickable="true"
                android:id="@+id/optionA"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:background="@color/quesBG"
                android:textColor="@color/whiteTextColor"
                android:layout_margin="2dp"
                android:focusable="true" />
            <TextView
                android:gravity="center"
                android:textSize="25sp"
                android:clickable="true"
                android:id="@+id/optionB"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:background="@color/quesBG"
                android:textColor="@color/whiteTextColor"
                android:layout_margin="2dp"
                android:focusable="true" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp">
            <TextView
                android:gravity="center"
                android:clickable="true"
                android:textSize="25sp"
                android:textColor="@color/whiteTextColor"
                android:id="@+id/optionC"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:background="@color/quesBG"
                android:layout_margin="2dp"
                android:focusable="true" />
            <TextView
                android:gravity="center"
                android:clickable="true"
                android:textSize="25sp"
                android:textColor="@color/whiteTextColor"
                android:id="@+id/optionD"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:background="@color/quesBG"
                android:layout_margin="2dp"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>