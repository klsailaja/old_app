<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/gap_in_components_less">
    <androidx.cardview.widget.CardView
        android:id="@+id/gameTypeCardEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/gameTypeEntryTxt"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/wallet_view_list_view_item_text_size1"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/gameTypeEntryName"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/wallet_view_list_view_item_text_size2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>