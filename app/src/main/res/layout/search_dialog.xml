<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/search_intro_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/search_spinner_comps_top_margin"
        android:layout_marginBottom="@dimen/search_spinner_comps_bottom_margin"
        android:gravity="center"
        android:baselineAligned="false">
        <Spinner
            android:id="@+id/searchCols"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"/>
       <Spinner
            android:id="@+id/searchVals"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/showNextFree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:checked="false"
        android:gravity="center"
        android:text="@string/nextFreeSlot" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/search_buttons_top_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/search_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/search_buttons_between_margin"
            android:gravity="center"
            android:text="@string/search_txt"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/clear_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/search_buttons_between_margin"
            android:gravity="center"
            android:text="@string/clear_txt"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/close_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/search_buttons_between_margin"
            android:gravity="center"
            android:text="@string/close_but"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>