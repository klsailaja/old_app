<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/totalCountPanel"
        android:layout_alignStart="@+id/tableScrollView"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/totalCount"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:textSize="@dimen/view_prizes_total_label_text_size"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:textColor="@color/impInfo"/>
        <TextView
            android:id="@+id/playerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:textSize="@dimen/view_prizes_total_label_text_size"
            android:layout_alignParentEnd="true"
            android:textColor="@color/impInfo"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/tableScrollView"
        android:layout_width="match_parent"
        android:layout_below="@+id/totalCountPanel"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:id="@+id/tableInvoices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        style="@style/normalButton"
        android:layout_marginBottom="@dimen/gap_in_components_less"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_close"
        android:background="@drawable/round_button"
        android:id="@+id/user_answers_close_but"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
