<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/view_gap_from_top"
    android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/game_recyle_view_top_margin"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/loggedUserCount"
        style="@style/StatusBarMsg"
        android:text="@string/logged_userCount_txt" />
    <TextView
        android:id="@+id/winMsgs"
        style="@style/StatusBarMsg"
        android:text="@string/status_bar_msg" />
 </LinearLayout>

